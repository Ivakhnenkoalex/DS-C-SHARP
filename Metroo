        public string color;
        public Line line;
        public bool isWheelchairAccessible;
        public bool hasParkAndRide;
        public bool hasNearbyCableCar;
        public List<Station> transfers;
        public void station(string name, string color)
        {
            this.name = name;
            this.color = color;
        }
